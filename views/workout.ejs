<section class="main-section container mx-auto p-4 main-section">
    <!-- Dropdown to select a saved workout -->
    <div class="mb-6">
        <label for="workout-selector" class="block text-gray-700 mb-2">Select Workout:</label>
        <select id="workout-selector" class="p-2 border border-gray-300 rounded w-full">
            <option value="" disabled selected>Select a workout</option>
            <% workouts.forEach(function(workout) { %>
                <option value="<%= workout._id %>"><%= workout.name %></option>
            <% }); %>
        </select>
    </div>

    <div class="mb-6">
        <button id="create-workout-btn" class="bg-green-500 text-white px-4 py-2 rounded">Create New Workout</button>
    </div>

    <!-- Section to edit the workout name -->
    <div class="mb-6">
        <label for="workout-name" class="block text-gray-700 mb-2">Workout Name:</label>
        <input type="text" id="workout-name" class="p-2 border border-gray-300 rounded w-full" placeholder="Enter workout name" required>
    </div>

    <!-- Table to manage exercises -->
    <table id="workoutTable" class="w-full border-collapse border border-gray-300">
        <thead>
            <tr>
                <th class="border border-gray-300 p-2">Exercise</th>
                <th class="border border-gray-300 p-2">Reps</th>
                <th class="border border-gray-300 p-2">Sets</th>
                <th class="border border-gray-300 p-2">Calories</th>
                <th class="border border-gray-300 p-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Exercise rows will be dynamically added here -->
        </tbody>
    </table>

    <!-- Buttons for managing the workout -->
    <div class="mt-4 flex space-x-4">
        <button id="add-exercise-btn" class="bg-blue-500 text-white px-4 py-2 rounded">Add Exercise</button>
        <button id="save-workout-btn" class="bg-green-500 text-white px-4 py-2 rounded">Save Workout</button>
        <button id="delete-workout-btn" class="bg-red-500 text-white px-4 py-2 rounded">Delete Workout</button>
    </div>
</div>
</section>


<!-- Link to the external JavaScript file -->
<script src="/js/workout.js"></script>